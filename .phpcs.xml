<?xml version="1.0"?>
<ruleset name="CNV Coding Standard">
    <description>CNV Team PHP Coding Standard</description>

    <file>./app</file>
    <file>./src</file>
    <file>./config</file>
    <file>./database</file>
    <file>./routes</file>
    <file>./tests</file>

    <exclude-pattern>*/resources/views/*/*.blade.php</exclude-pattern>

    <rule ref="PSR12"/>
    <rule ref="PSR1.Classes.ClassDeclaration.MissingNamespace">
        <exclude-pattern>*./database/*</exclude-pattern>
    </rule>
</ruleset>
